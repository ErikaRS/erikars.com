---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>erikars.com</h1>
			<p>
				Welcome to my website.
			</p>
			<ul>
				<li><a href={import.meta.env.BASE_URL.replace(/\/?$/, '/') + 'blog'}>Blog</a></li>
				<li><a href={import.meta.env.BASE_URL.replace(/\/?$/, '/') + 'recipes'}>Recipes</a></li>
				<li><a href={import.meta.env.BASE_URL.replace(/\/?$/, '/') + 'about'}>About</a></li>
			</ul>
		</main>
		<Footer />
	</body>
</html>
